<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/web_containter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sa_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/layout_activity_sa_top_bar_back_title_close" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sa_picker_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_choose_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_top_bar_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/choose_date_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sa_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sa_top_bar"
        android:layout_above="@+id/sa_picker_bar">

        <WebView
            android:id="@+id/webView_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>