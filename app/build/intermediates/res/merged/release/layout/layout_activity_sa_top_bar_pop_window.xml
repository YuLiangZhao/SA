<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        tools:ignore="RtlHardcoded,UselessParent">

        <LinearLayout
            android:id="@+id/id_sa_pop_dialog_layout"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/black_gray"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded,UselessParent"
            android:layout_width="150dp">

            <LinearLayout
                android:id="@+id/id_groupchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sa_pop_list_selector"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/id_imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/sa_pop_group"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pop1_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_pop_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/sa_pop_line"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:id="@+id/id_addfrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sa_pop_list_selector"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/id_imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/sa_pop_add"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pop2_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_pop_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/sa_pop_line"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/id_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sa_pop_list_selector"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imv_pop_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/sa_pop_qrcode"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pop3_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_pop_line_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/sa_pop_line"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/id_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sa_pop_list_selector"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imv_pop_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/sa_pop_feedback"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pop4_text"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
