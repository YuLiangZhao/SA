<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_tc_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/app_bg"
                android:orientation="vertical">

                <com.zbar.lib.custom_views.imgview.UserFaceImageView
                    android:id="@+id/imv_tc_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_img_alt"
                    android:src="@drawable/default_userhead"
                    app:border_color="@color/white"
                    app:border_width="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tc_head"
                android:orientation="vertical"
                tools:ignore="UselessLeaf"
                android:gravity="center_horizontal"
                android:background="@color/app_bg"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_tc_name"
                    android:text="@string/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/corners_green_bg"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:typeface="sans"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_tc_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_name"
                android:layout_gravity="center"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/ll_tc_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line1"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="@string/teacher_sex"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:id="@+id/tv_tc_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_sex"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@color/gray"
                    android:typeface="serif" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_tc_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_sex"
                android:layout_gravity="center"
                android:background="@color/app_foot_bar_bg" />
            <LinearLayout
                android:id="@+id/ll_tc_xueli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line2"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="@string/teacher_xueli"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:id="@+id/tv_tc_xueli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_xueli"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@color/gray"
                    android:typeface="serif" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_tc_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_xueli"
                android:layout_gravity="center"
                android:background="@color/app_foot_bar_bg" />
            <LinearLayout
                android:id="@+id/ll_tc_zhicheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line3"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="@string/teacher_zhicheng"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:id="@+id/tv_tc_zhicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_zhicheng"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@color/gray"
                    android:typeface="serif" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_tc_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_zhicheng"
                android:layout_gravity="center"
                android:background="@color/app_foot_bar_bg" />
            <LinearLayout
                android:id="@+id/ll_tc_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line4"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="@string/teacher_mood"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:id="@+id/tv_tc_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teacher_mood"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@color/gray"
                    android:typeface="serif" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_tc_line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_mood"
                android:layout_gravity="center"
                android:background="@color/app_foot_bar_bg" />

            <LinearLayout
                android:id="@+id/ll_tc_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line5"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/tv_app_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_about"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_app_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="@string/app_go"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:typeface="serif"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_tc_line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_tc_about"
                android:layout_gravity="center"
                android:background="@color/app_foot_bar_bg" />

            <LinearLayout
                android:id="@+id/ll_tc_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_tc_line6"
                android:orientation="vertical"
                tools:ignore="UselessLeaf"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_app_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_exit"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/corners_red_bg"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
