<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_student_class_work"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show_student_class_work"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/app_top_bar_bg"
        android:gravity="center"
        android:text="@string/up_pic_student_class_work_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imv_show_student_class_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:src="@drawable/student_class_work_pic"
        android:contentDescription="@string/up_pic_student_class_work_pic_tips"
        android:layout_below="@+id/tv_show_student_class_work"
        android:adjustViewBounds="false" />

    <TextView
        android:id="@+id/tv_new_student_class_work_pic_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/up_pic_student_class_work_pic_tips"
        android:textColor="#FFFF0000"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>